{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/Zi",
                "/I", "${workspaceFolder}/include",
                "/Fe:",
                "${workspaceFolder}/build/Debug/roller-coaster.exe",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/include/glad/glad.c"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}